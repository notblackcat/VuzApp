<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vuzapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_vusedu_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_vusedu_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VuzApp"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity android:name=".ui.login.LoginActivity"></activity>
        <activity android:name=".ui.pdf.PdfActivity"></activity>

        <activity android:name=".ui.dashboard.DashboardActivityMain"></activity>
        <activity android:name=".ui.home.HomeActivityMain"></activity>
        <activity android:name=".ui.notifications.NotificationActivityMain"></activity>
        <activity android:name=".ui.library.LibraryActivityMain"></activity>
        <activity android:name=".ui.password.PasswordResetActivity"></activity>
        <activity android:name=".ui.fragmentsmain.FragmentsMainActivity"></activity>

        <activity android:name=".ui.splashcreen.SplashScreenActivity">
            //startfrom
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>